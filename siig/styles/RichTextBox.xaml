<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:siig.styles">
    <Style x:Name="RichTextBox" TargetType="RichTextBox">
        <Setter Property="Background" Value="{StaticResource ContainerBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontFamily" Value="/font/#Lobster"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>
</ResourceDictionary>