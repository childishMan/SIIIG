<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hw="http:/herewego.cc">

    <Style x:Key="inputBox" TargetType="hw:InputBox">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="PlaceholderBrush" Value="{StaticResource PlaceholderBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ItemsBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource ItemsBackgroundBrush}"/>
        <!--<Setter Property="TextAlignment" Value="Center"/>-->
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>