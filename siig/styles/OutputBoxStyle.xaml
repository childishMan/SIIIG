<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hw ="http:/herewego.cc">
    <Style x:Key="OutputBoxStyle" TargetType="hw:OutputBox">
        <Setter Property="VerticalContentAlignment" Value="Center"/>

        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ItemsBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource ItemsBackgroundBrush}"/>

        <Setter Property="BorderThickness" Value="2"/>

        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Width" Value="Auto"/>

        <Setter Property="Padding" Value="5"/>

        <Setter Property="FontSize" Value="10"/>

    </Style>
    
</ResourceDictionary>