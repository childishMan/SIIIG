<UserControl x:Class="siig.Views_ViewModels.CorelationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xd="http:/herewego.cc" d:DesignHeight="400" d:DesignWidth="255"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <xd:MContainer Grid.Row="0"
                       Style="{StaticResource ContainerStyle}" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="5*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label  Grid.Row="0" Grid.ColumnSpan="2"
                        Content="Settings" FontSize="13"
                        Style="{StaticResource MainLabel}" />

                <RadioButton Grid.Row="1" Grid.Column="0"
                             x:Name="CrossCorelate"
                             VerticalContentAlignment="Center" HorizontalAlignment="Left"
                             IsChecked="True" Checked="MethodButtonFired">
                    <Label Content="Cross-corelation" FontSize="9" 
                           Style="{StaticResource MainLabel}"/>
                </RadioButton>

                <RadioButton Grid.Row="2" Grid.Column="0"
                             x:Name="AutoCorelate"
                             VerticalContentAlignment="Center" HorizontalAlignment="Left"
                             Checked="MethodButtonFired">
                    <Label Content="Auto-corelation" Style="{StaticResource MainLabel}" FontSize="9" />
                </RadioButton>

                <CheckBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"
                          VerticalContentAlignment="Center"
                          Click="NormalizeCheckChanged">
                    <Label Content="Normalize" Style="{StaticResource MainLabel}" FontSize="9" />
                </CheckBox>
            </Grid>
        </xd:MContainer>

        <xd:MContainer Grid.Row="1" 
                       Style="{StaticResource ContainerStyle}" >

            <StackPanel>
                <Label Style="{StaticResource MainLabel}"
                       Content="Input Signal" FontSize="13" />
                <xd:InputBox Name="InputFirstSignal" Style="{StaticResource inputBox}"
                             Placeholder="example: 1;2 2;2 5;3"
                             FontSize="10" />
            </StackPanel>
        </xd:MContainer>

        <xd:MContainer Grid.Row="2" Name="SecondSignalBlock"
                       Style="{StaticResource ContainerStyle}" >
            <StackPanel>
                <Label Style="{StaticResource MainLabel}"
                       Content="Second Signal" FontSize="13" />
                <xd:InputBox Name="InputSecondSignal" Style="{StaticResource inputBox}"
                             Placeholder="example: 1;2 2;2 5;3"
                             FontSize="10" />
            </StackPanel>
        </xd:MContainer>

        <xd:MContainer Name="OutputBlock" Grid.Row="3" 
                       Style="{StaticResource ContainerStyle}" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Style="{StaticResource MainLabel}"
                       Content="Output Signal" FontSize="13" />
                <xd:OutputBox Name="OutputSignal" Grid.Row="1"
                              Text="{Binding Output,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" FontSize="10"
                              Style="{StaticResource OutputboxStyle}" Height="Auto" Margin="10,10.4,10.8,9.8" />
            </Grid>
        </xd:MContainer>
    </Grid>
</UserControl>
